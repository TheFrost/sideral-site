//- Project
extends pug/layout/layout

block content
  div.wrapper.full(data-module-scope="project")
    div.wrapper__inner.no-padding
      article.project
        figure.project__hero
          img(src="images/cover-placeholder.png", alt="SIDERAL STUDIO")
        div.project__info
          div.project__row
            div.project__column
              div.project__info-block
                h2.project__title Proyecto
                p.name
            div.project__column
              div.project__info-block
                h2.project__title Origen
                p.address
            div.project__column
              div.project__info-block
                h2.project__title Fecha
                p.date
          div.project__row
            div.project__column
              div.project__info-block.u-flex-center
                figure.project__icon.big
                  img(src="images/smile-eyes.svg", alt="SIDERAL STUDIO")
            div.project__column
              div.project__info-block
                h2.project__title Desarrollo
                div.project__text-container
            div.project__column
              div.project__info-block
                ul.project__list.skills.u-list-nostyle
              div.project__info-block.u-flex-center
                div.project__icons-grid
                  figure.project__icon
                    img(src="images/asteroid.svg", alt="SIDERAL STUDIO")
                  figure.project__icon
                    img(src="images/astronaut.svg", alt="SIDERAL STUDIO")
                  figure.project__icon
                    img(src="images/planet.svg", alt="SIDERAL STUDIO")
        ul.project__gallery.u-list-nostyle